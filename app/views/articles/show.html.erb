<h2>Detalle del artículo</h2>

<div>
  <p><strong>Título:</strong></p>
  <p><%= @article.title %></p>
</div>
<div>
  <p><strong>Texto del artículo:</strong></p>
  <p><%= @article.body %></p>
</div>

<h3>Comments:</h3>

<%= render @article.comments %>

<h3>Add a comment</h3>

<%= render 'comments/form' %>

<div>
  <%= link_to 'Edit', edit_article_path %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure????' } %>
</div>
<div>
  <%= link_to 'Volver', articles_path %>
</div>